{
  "name": "@ludovicm67/scheduler",
  "version": "0.2.1",
  "description": "A simple Node.js based tasks and services scheduler",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "cli": "./dist/index.js"
  },
  "scripts": {
    "start": "node src/index.ts",
    "build": "rm -rf dist && tsc && npm run update-schema && vite build && chmod +x dist/index.js && npm run fix-types",
    "prepack": "npm run build",
    "update-schema": "node src/scripts/update-schema.ts",
    "fix-types": "node src/scripts/fix-types.ts",
    "release": "changeset publish",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "scheduler"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ludovicm67/node-scheduler.git"
  },
  "author": {
    "name": "Ludovic Muller",
    "url": "https://ludovic-muller.fr/"
  },
  "files": [
    "dist"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "commander": "^14.0.2",
    "express": "^5.2.1",
    "node-cron": "^4.2.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "uuid": "^13.0.0",
    "yaml": "^2.8.2",
    "zod": "^4.3.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/express": "^5.0.6",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-static-copy": "^3.1.4"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
